<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:orientation="horizontal"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.tejaskoundinya.wordlist.WordDetail" tools:ignore="MergeRootFrame" >

    <fragment class="com.tejaskoundinya.wordlist.WordListFragment"
        android:id="@+id/frag_list"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <fragment class="com.tejaskoundinya.wordlist.WordDetailFragment"
        android:id="@+id/frag_detail"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
